page {
    background-color: var(--themeColor);
  }
  .top{
    background-color: var(--themeColor);
    height: 70px;
    text-align: center;
    padding: 10px;
  }
  
  .orderHome{
    line-height: 100px;
    font-size: x-large;
    font-weight: bolder;
    color: rgb(240, 240, 240);
  }
  



  .contentView {
    width: 100%;
   
  }
  
  #leftSlideItem {
    width: 92%;
    height: 500rpx;
    margin: 32rpx 4% 0 4%;
  }
  
  #leftSlideItem .leftView {
    width: 76%;
    padding: 48rpx 11.73%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: #ffffff;
    position: relative;
  }
  
  #leftSlideItem .rightView {
    width: 400rpx;
    height: 100%;
    display: flex;
    flex-direction: row;
  }
  
  #leftSlideItem .leftView .Name {
    font-size: 32rpx;
    color: #242933;
    font-weight: bold;
  }
  
  #leftSlideItem .leftView .other {
    font-size: 28rpx;
    color: #8A8F99;
  }
  
  #leftSlideItem .leftView .bottomRow {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 28rpx;
    color: #8A8F99;
  }
  
  #leftSlideItem .leftView .bottomRow .unit {
    position: relative;
    right: 14%;
  }
  
  #leftSlideItem .leftView .num {
    width: 48rpx;
    height: 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    color: #ffffff;
    background: #2B72E8;
    border-radius: 18rpx;
    position: absolute;
    top: 52rpx;
    left: 20rpx;
  }
  #leftSlideItem .rightView .updateView{
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 28rpx;
    background: #FED13C;
  }

  .no-order-message {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* 使消息居中显示 */
    font-size: 18px;
    color: rgb(255, 255, 255); /* 自定义颜色 */
    /* 可以添加其他样式，如字体样式、背景颜色等 */
  }