/* pages/signout/signout.wxss */
.out-wrap {
	background-color: rgb(211, 212, 211);
	height: 900px;
	display: flex;
	flex-direction: column;
	vertical-align: center;
	align-items: center;
}
.button-wrap {
	margin-top: 30px;
	display: flex;
	flex-direction: row;
}
.yes {
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 40rpx;
	height: 70rpx;
	border: 1px solid #000;
	margin-top: 20px;
}
.no {
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 40rpx;
	height: 70rpx;
	border: 1px solid #000;
	margin-top: 20px;
}