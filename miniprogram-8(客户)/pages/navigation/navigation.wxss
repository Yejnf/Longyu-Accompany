/* 医院列表容器 */
.hospitals {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-top: 10rpx;
}

/* 医院列表项 */
.hospital-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc; /* 添加一条装饰线 */
}

/* 医院图标容器 */
.hospital-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  border-radius: 5rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 医院图标 */
.hospital-icon {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 医院信息 */
.hospital-info {
  flex-grow: 1;
  margin-left: 10rpx;
}

/* 在页面样式表中添加以下样式 */
.map-options {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff; /* 设置背景颜色 */
  box-shadow: 0px -2px 4px rgba(0, 0, 0, 0.1); /* 添加底部阴影效果 */
  display: flex;
  justify-content: space-between;
  padding: 10rpx; /* 调整内边距 */
}

.map-option {
  flex: 1;
  text-align: center;
  padding: 10rpx; /* 调整按钮内边距 */
  font-size: 16px; /* 设置字体大小 */
  color: #007AFF; /* 设置按钮文字颜色 */
  cursor: pointer;
}

.map-option:last-child {
  color: #FF3B30; /* 设置取消按钮文字颜色 */
}

.map-option:hover {
  background-color: #F2F2F2; /* 设置按钮鼠标悬停时的背景颜色 */
}


