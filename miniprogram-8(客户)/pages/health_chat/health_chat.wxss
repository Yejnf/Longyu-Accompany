.send {
  padding: 0.2rem 0.4rem; /* 添加一些内边距 */
  border-radius: 0.5rem;
  cursor: pointer; /* 鼠标悬停时显示手型 */
  background-color: rgb(212, 212, 212);
  color: black;
  box-shadow: 6px 6px 6px -1px rgba(0,0,0,0.15),
	      -6px 0px 10px -1px rgba(0,0,0,0.15);
}


