.input_text {
  flex: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.1rem;
}

.input_text input{
  /* background-color: darkmagenta; */
  flex: 1;
  padding: 0.6rem;
  /* border-bottom: 1.5px solid rgb(173, 173, 173); */
  outline: none;
  position: relative;
}

.input_text input::after {
  content: "";
  display: block;
  width: 90%; /* 下划线宽度为文本框宽度的90% */
  height: 1.5px; /* 下划线高度 */
  background-color: rgb(173, 173, 173); /* 下划线颜色 */
  position: absolute;
  bottom: 0;
  left: 5%; /* 下划线距离文本框左侧的距离，这里假设文本框有5%的内边距 */
}


.send_view {
  /* background-color: darkmagenta; */
