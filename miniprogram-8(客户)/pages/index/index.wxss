}

.textOverLay{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  margin-top:22%;
  margin-left:10%;
  font-size: smaller;
  font-weight: bold;
  word-wrap: break-word; /* 或者使用 overflow-wrap: break-word; */
  max-width: 15em; /* 控制每行最多显示8个字符 */
}






/* 头像 */
button{
  margin: 15rpx 0;
}
.row-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx;
  font-size: 32rpx;
}
.row-info view{
  padding: 10rpx 0;
}
.row-info view:first-child{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.line{
  width: 100rpx;
  height: 1rpx;
}
.left-line{
  background-image: linear-gradient(to left,orange,white);
}
.right-line{
  background-image: linear-gradient(to right,orange,white);
}
.row-author{
  font-size: 24rpx;
  color: gray;
}
.row-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx dashed #f1f1f1;
}
.row-btn view{
  flex: 1;
  text-align: center;
  margin: 20rpx 10%;
  padding: 12rpx 0;
  font-size: 32rpx;
  border-radius: 10rpx;
}
.left-btn{
  background-color: #f1f1f1;
  color: rgb(26, 173, 25);
}
.right-btn{
  background-color: rgb(26, 173, 25);
  color: white;
}
.fixed{
  position: fixed;
  bottom: 0;
  width: 50%;
}

